# Environment
NODE_ENV=development

# Database
DATABASE_URL="postgresql://postgres:docker@localhost:5432/sei-institute?schema=public"

# Auth
JWT_SECRET=your-jwt-secret
JWT_EXPIRATION=1d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRATION=7d

# Image serving
PUBLIC_IMAGE_URL=http://localhost:3001
# In production, set this to your domain, e.g., https://api.seiinstitute.com

# Persistent storage path for uploads
# In development, this is usually the local 'uploads' directory
# In production, specify a persistent storage path, e.g., /var/www/sei-institute/uploads
UPLOADS_PATH=uploads 